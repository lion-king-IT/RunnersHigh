<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentCalorie"
    android:background="@color/wall_white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:title="プロフィール"
        app:titleTextColor="@color/normal2"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/settingImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_setting"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/profile"
        app:tint="@color/black" />


    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/profile_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_card"
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_account"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/profile" />

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_name"
                    android:textSize="30sp"
                    android:textColor="@color/normal2"
                    android:layout_marginTop="100dp"
                    android:layout_gravity="center_horizontal"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_login"
                    app:tint="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="355dp"
                    android:contentDescription="@string/profile" />

                <TextView
                    android:id="@+id/loginDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="230dp"
                    android:text="@string/login_day"
                    android:textColor="@color/normal" />

                <TextView
                    android:id="@+id/objective"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/objective"
                    android:textSize="15sp"
                    android:textColor="@color/normal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="155dp"/>

                <TextView
                    android:id="@+id/objectiveText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/objective_sample"
                    android:textSize="15sp"
                    android:textColor="@color/normal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="180dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_distance_level"
                    android:textColor="@color/normal"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_question"
                    app:tint="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="365dp"
                    android:contentDescription="@string/profile"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_level_num"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/normal"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/ic_5km"
                    app:tint="@color/teal_200"
                    android:contentDescription="@string/profile"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_distance_metaphor"
                    android:textColor="@color/normal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="170dp" />

            </androidx.cardview.widget.CardView>
            
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:backgroundTint="@color/white"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_question"
                    app:tint="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="365dp"
                    android:contentDescription="@string/profile"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_calorie_level"
                    android:textColor="@color/normal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_calorie_level_num"
                    android:textColor="@color/normal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_600kcal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    app:tint="@color/tooBad"
                    android:contentDescription="@string/profile"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_calorie_metaphor"
                    android:textColor="@color/normal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="170dp"/>
                
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:backgroundTint="@color/wall_white"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>