<!--memo-->
    <ImageView
        android:id="@+id/memoImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/ic_memo"
        android:layout_marginStart="30dp"
        android:contentDescription="@string/result_memo"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/memo"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="@color/normal"
        android:hint="@string/result_memo"
        android:textColorHint="@color/normal"
        android:autofillHints="@string/result_memo"
        android:inputType="textMultiLine"
        android:layout_marginBottom="140dp"
        android:layout_marginStart="20dp"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/memoImage"/>

<!--fab-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/resultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/resutl_finish" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_check"
        android:elevation="10dp"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="43dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white"
        android:contentDescription="@string/resutl_finish" />

