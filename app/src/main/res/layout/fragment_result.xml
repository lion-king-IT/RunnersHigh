<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

<!--photo-->
    <TextView
        android:id="@+id/backRound"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/teal_200"
        android:elevation="-10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/photoEmpty"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:contentDescription="@string/imageSet"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="-10dp"/>

    <ImageView
        android:id="@+id/weather"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/weatherSet" />

    <TextView
        android:id="@+id/today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today"
        android:textColor="@color/white"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_marginTop="190dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/totalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_time"
        android:textColor="@color/white"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/weather" />


    <TextView
        android:id="@+id/totalDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_distance"
        android:textColor="@color/white"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/totalTime"/>

    <TextView
        android:id="@+id/totalCalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_calorie"
        android:textColor="@color/white"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/totalDistance"/>

    <ImageView
        android:id="@+id/feedBack"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/feedBack" />

    <TextView
        android:id="@+id/photoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_title"
        android:textColor="@color/white"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/cameraImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_camera"
        android:contentDescription="@string/result_camera"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white"/>

<!--feed back-->
<!--    <com.andexert.library.RippleView-->
<!--        android:id="@+id/rippleView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="100dp"-->
<!--        app:layout_constraintTop_toBottomOf="@id/backRound">-->

        <ImageView
            android:id="@+id/perfectImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_perfect"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:contentDescription="@string/feedBack"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/backRound"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/normal2"
            android:focusable="true" />

        <ImageView
            android:id="@+id/goodImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_good"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/backRound"
            app:layout_constraintStart_toEndOf="@id/perfectImage"
            android:contentDescription="@string/feedBack"
            app:tint="@color/normal2"
            android:focusable="true" />

        <ImageView
            android:id="@+id/sosoImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_soso"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/feedBack"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/backRound"
            app:layout_constraintStart_toEndOf="@id/goodImage"
            app:tint="@color/normal2"
            android:focusable="true" />

        <ImageView
            android:id="@+id/badImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_bad"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/feedBack"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/backRound"
            app:layout_constraintStart_toEndOf="@id/sosoImage"
            app:tint="@color/normal2"
            android:focusable="true" />

        <ImageView
            android:id="@+id/tooBadImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sick"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/feedBack"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/backRound"
            app:layout_constraintStart_toEndOf="@id/badImage"
            app:tint="@color/normal2"
            android:focusable="true" />

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_cancel"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@id/backRound"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/normal2"
            android:visibility="gone"
            android:contentDescription="@string/fui_cancel" />

<!--    </com.andexert.library.RippleView>-->
<!--feed back text-->
    <TextView
        android:id="@+id/score100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/perfectText"
        android:textSize="20sp"
        android:textColor="#f44336"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_marginTop="40dp"
        android:layout_marginStart="140dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/backRound"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/score80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goodText"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_marginTop="40dp"
        android:layout_marginStart="70dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/backRound"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/score60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sosoText"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_marginTop="40dp"
        android:layout_marginStart="70dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/backRound"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/score40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/badText"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_marginTop="40dp"
        android:layout_marginStart="70dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/backRound"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/score20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tooBadText"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/alfa_slab_one"
        android:layout_marginTop="40dp"
        android:layout_marginStart="70dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/backRound"
        app:layout_constraintStart_toStartOf="parent"/>

<!--weather-->
    <ImageView
        android:id="@+id/sunny"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_sunny"
        android:layout_marginTop="330dp"
        android:layout_marginStart="80dp"
        android:contentDescription="@string/weatherSet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cloud"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_cloud"
        android:layout_marginTop="330dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/weatherSet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/sunny"/>

    <ImageView
        android:id="@+id/rainy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_rainy"
        android:layout_marginTop="330dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/weatherSet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cloud"/>

    <ImageView
        android:id="@+id/snow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_snow"
        android:layout_marginTop="330dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/weatherSet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/rainy" />

<!--course-->

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/backRound"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/course" />

<!--memo-->
    <ImageView
        android:id="@+id/memoImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/ic_memo"
        android:layout_marginStart="30dp"
        android:contentDescription="@string/result_memo"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/memo"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="@color/normal"
        android:hint="@string/result_memo"
        android:textColorHint="@color/normal"
        android:autofillHints="@string/result_memo"
        android:inputType="textMultiLine"
        android:layout_marginBottom="140dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/memoImage"/>

<!--fab-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/resultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/resutl_finish" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_check"
        android:elevation="10dp"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="43dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white"
        android:contentDescription="@string/resutl_finish" />

</androidx.constraintlayout.widget.ConstraintLayout>